<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AreaDoAlunoController">
   <children>
      <Label text="Area do Aluno">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <padding>
            <Insets bottom="5.0" left="10.0" top="5.0" />
         </padding>
      </Label>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Relatorios">
            <items>
              <MenuItem mnemonicParsing="false" text="Historico dos Alunos" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button fx:id="btNew" mnemonicParsing="false" onAction="#onBtNewAction" text="New" />
            <Button fx:id="btEdit" mnemonicParsing="false" onAction="#onBtEditAction" text="Edit" />
            <Button fx:id="btDelete" mnemonicParsing="false" onAction="#onBtDeleteAction" text="Delete" />
        </items>
      </ToolBar>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
         <items>
            <TextField fx:id="txtPesquisar" onAction="#onBtPesquisarAction" promptText="Pesquisar">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </TextField>
            <Button fx:id="btPesquisar" alignment="TOP_LEFT" contentDisplay="TOP" mnemonicParsing="false" onAction="#onBtPesquisarAction" text="OK">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Button>
         </items>
      </ToolBar>
      <TableView fx:id="tableViewAluno" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="tableColumnMatricula" text="matricula" />
